<%- include("./partials/head.ejs") %>
<%- include("./partials/nav.ejs") %>

<body>
  <div class="container">

    <form class="row g-3" method="POST" action="/api/signup">
      <div class="col-md-6">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" name="email" >
      </div>
      <div class="col-md-3">
        <label for="inputPassword" class="form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword" name="password"  min="8">
      </div>
      <div class="col-md-3">
        <label for="password_confirmation" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" name="password_confirmation" id="password_confirmation"  min="8">
      </div>
      <div class="col-md-6">
        <label for="inputFname" class="form-label">First Name</label>
        <input type="text" class="form-control" id="inputFname" name="fname" >
      </div>
      <div class="col-md-6">
        <label for="inputLname" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="inputLname" name="lname" >
      </div>
      <div class="col-md-12">
        <label for="inputCity" class="form-label">City</label>
        <input type="text" class="form-control" id="inputCity" name="city">
      </div>

      <div class="col-12">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="M" name="gender">
          <label class="form-check-label" for="inlineCheckbox1">Male</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="F" name="gender">
          <label class="form-check-label" for="inlineCheckbox2">Female</label>
        </div>
      </div>
      <div class="col-12">
        <label for="inputDate" class="form-label">Birth Date</label>
        <input type="date" class="form-control" id="inputDate" name="bdate">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
    </form>
  </div>
  <script src="/js/signup.js"></script>
</body>

</html>